//GetMin() in TC: O(1) and SC: O(1)

int mini=INT_MAX;
void push(stack<int>& s, int a){
if(s.empty())
{
    s.push(a);
    mini=a;
}
else
{
    if(a < mini)
    {
        int val=2*a-mini;
        s.push(val);
        mini=a;
    }
    else
        s.push(a);
}
}

bool isFull(stack<int>& s,int n){
if(s.size()==n)
    return true;
 return false;
}

bool isEmpty(stack<int>& s){
return s.empty();
}

int pop(stack<int>& s){
if(s.empty())
    return -1;

int curr=s.top();
   s.pop();
   if(curr < mini)
       return curr;
   else
   {
       int prevmini=mini;
       int val=2*mini-curr;
       mini =val;
       return prevmini;
   }
}

int getMin(stack<int>& s){
if(s.empty())
    return -1;
return mini;
}


